{
  "environment": "PROD",
  "region": "eu-west-1",
  "service": {
    "name": "drift-api",
    "https": { "port": 8443, "base_path": "/" },
    "timeouts": { "connect": "3s", "read": "0.5m" },
    "retry": { "attempts": 3, "backoff_ms": 250 },
    "limits": { "rateRps": 200, "maxPayloadMb": 20 }
  },
  "database": {
    "engine": "aurora-postgresql",
    "endpoint": "prod-db.cluster.internal:5432",
    "pool": { "min": "10", "max": "80" },
    "backup": { "retentionDays": 7, "pitr": true }
  },
  "security": {
    "tls": { "min": 1.3, "hsts": true },
    "waf": { "enabled": "true" },
    "auth": {
      "mode": "oidc",
      "issuer": "prod-idp",
      "token_ttl_seconds": 600
    }
  },
  "change_window": "sun-02:00-04:00",
  "lst": [
    "a",
    "b"
  ],
  "lst2": [
    "c",
    "d"
  ]
}

