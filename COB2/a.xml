<operatingSystemRoot id="linux01" family="unix">
  <kernelCore type="monolithic" version="5.15">
    <moduleExt4>
      <ext4Status>enabled</ext4Status>
    </moduleExt4>
    <moduleNetfilter>
      <netfilterState>enabled</netfilterState>
    </moduleNetfilter>
  </kernelCore>
  <serviceSSH>
    <sshPort>22</sshPort>
    <sshPolicy>allow</sshPolicy>
  </serviceSSH>
  <serviceCron>
    <cronMode>enabled</cronMode>
  </serviceCron>
  <securityPolicy>
    <selinuxMode>enforcing</selinuxMode>
  </securityPolicy>
  <resourceLimits>
    <maxOpenFiles>
      <softLimit>1024</softLimit>
    </maxOpenFiles>
  </resourceLimits>
</operatingSystemRoot>
